<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/root_layout"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@mipmap/top"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="42dp"
                    android:src="@mipmap/logo03"
                    android:layout_height="42dp"/>
                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:text="自由模式"
                    android:layout_marginLeft="30dp"
                    android:textSize="22sp"
                    android:textColor="#ffffff"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
               <!-- <ImageView
                    android:id="@+id/qiehuan"
                    android:layout_width="50dp"
                    android:src="@mipmap/arrow04"

                    android:layout_height="50dp"/>-->
                <ImageView
                    android:id="@+id/sheshouxinxi"
                    android:layout_width="52dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/set"
                    android:layout_height="52dp"/>
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:background="@mipmap/left"
                android:layout_height="wrap_content">
               <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_margin="20dp"
                android:padding="2dp"
                android:background="@drawable/beijin"
                android:layout_height="match_parent">
                <!--播放控件 IjkVideoView -->
                <com.longke.shot.media.IjkVideoView
                    android:id="@+id/video_view"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="600px"

                    android:layout_height="600px"/>
                <com.longke.shot.view.PointView
                    android:id="@+id/shot_point"
                    android:layout_alignTop="@+id/video_view"
                    android:layout_width="600px"
                    app:radio="10dp"
                    app:pointColor="#ff0000"
                    android:layout_height="600px"/>

                   <TextView
                       android:id="@+id/TargetName_tv"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_gravity="center_vertical"
                       android:paddingBottom="10dp"
                       android:paddingLeft="10dp"
                       android:textColor="@color/colorPrimary"
                       android:textSize="22sp" />
            </RelativeLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@mipmap/right"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/beijin"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/logo2"
                        android:layout_height="120dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"

                        android:orientation="vertical"
                        android:padding="28dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="40dp"
                                android:src="@mipmap/icon01"

                                android:layout_height="40dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="射手信息"
                                android:drawablePadding="10dp"
                                android:textSize="22sp"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:textColor="@color/colorCC000000"
                                android:layout_height="wrap_content"
                                />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="姓名 : 暂无"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorCC000000"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/name"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="学号 : 暂无"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorCC000000"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/xuehao"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:text="组号 : 暂无"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorCC000000"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/zuhao"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="科目 : 暂无"
                                    android:textSize="18sp"
                                    android:textColor="@color/colorCC000000"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/kemu"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <!--成绩-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">

                    <!--剩余子弹-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/beijin"
                        android:orientation="vertical"
                        android:gravity="center"

                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@mipmap/icon03"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:text="当前子弹"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorCC000000"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="第"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="0"
                                android:textColor="@color/colorCC000000"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:id="@+id/shengyuzidan"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="发"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--本次成绩-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/beijin"
                        android:orientation="vertical"

                        android:gravity="center"


                        android:layout_marginLeft="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@mipmap/icon02"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="本次成绩"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorCC000000"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="0"
                                android:textColor="@color/colorCC000000"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:id="@+id/bencisheji"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="环"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--总成绩-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/beijin"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:gravity="center"

                        android:paddingRight="10dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:src="@mipmap/icon02"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="总成绩"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorCC000000"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_marginTop="26dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="0"
                                android:textColor="@color/colorCC000000"
                                android:textSize="50sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:id="@+id/zongchengji"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="环"
                                android:textColor="#ffffff"
                                android:textSize="18sp"
                                android:paddingLeft="10dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <!--剩余时间-->
                <LinearLayout
                    android:id="@+id/remaining_time"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:padding="25dp"
                    android:background="@drawable/beijin"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorCC000000"
                        android:text="已用 "
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/shengyushijian"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorCC000000"
                        android:textStyle="bold"
                        android:text="00 ：00 ：00"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <!--准备射击按钮-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="70dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ready_layout"
                        android:clickable="false"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gray_shape"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/kaishi_title"
                            android:layout_width="wrap_content"
                            android:text="准备"
                            android:textStyle="bold"
                            android:textColor="#fbfbfb"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/shot_btn"
                            android:layout_width="wrap_content"
                            android:text="就绪"
                            android:textStyle="bold"
                            android:paddingTop="6dp"
                            android:textColor="#fbfbfb"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/end_layout"
                        android:layout_width="0dp"
                        android:clickable="false"
                        android:visibility="gone"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/gray_shape"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="结束"
                            android:textStyle="bold"
                            android:textColor="#fbfbfb"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="射击"
                            android:textStyle="bold"
                            android:paddingTop="6dp"
                            android:textColor="#fbfbfb"
                            android:textSize="18sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/num_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#99000000"
        android:visibility="gone"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/kaishi"
            android:layout_width="wrap_content"
            android:text="准备开始"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="160sp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/num_tv"
            android:layout_width="260dp"
            android:text="3"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/count_down_shape"
            android:textSize="160sp"
            android:textColor="@android:color/white"
            android:layout_height="260dp"/>

    </LinearLayout>



</RelativeLayout>
